<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
       {% block page_header %}
            <div id="page_header" style="background: #cccccc">
                    <img src="https://static.platzi.com/mf-landings/image/logotipo-platzi-768799552e5f26369e21a807b8a533f7.png"/>
                        {% if app.user %}
                            {{ app.user }} - <a href="{{ url('app_logout') }}">Salir</a>
                        {% else %}
                            <a href="{{ url('app_login') }}">Ingresar</a>
                        {%  endif %}
            </div>
        {% endblock %}
        {% block body %}{% endblock %}
    </body>
</html>
